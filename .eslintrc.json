{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended", "plugin:json/recommended", "plugin:yml/recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": "warn",
        "class-methods-use-this": "off",
        "func-names": "off",
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-use-before-define":["error",{ "functions": false, "classes": true, "variables": true }],
        "no-var": "error",
        "object-shorthand": "off",
        "strict": "off"
    }
}
